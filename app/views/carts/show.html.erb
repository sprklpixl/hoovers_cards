<h1>Your Shopping Cart</h1>

<% if @cart.order_items.empty? %>
  <p>Your cart is currently empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Type</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.order_items.each do |item| %>
        <tr>
          <td><%= link_to item.product.title, product_path(item.product) %></td>
          <td><%= item.type.name %></td>
          <td><%= number_to_currency(item.unit_price) %></td>
          <td>
            <%= form_with url: update_item_cart_path, method: :patch, local: true do |f| %>
              <%= f.hidden_field :order_item_id, value: item.id %>
              <%= f.number_field :quantity, value: item.quantity, min: 1 %>
              <%= f.submit 'Update' %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.total_price) %></td>
          <td>
            <%= form_with url: remove_item_cart_path, method: :delete, local: true do |f| %>
              <%= f.hidden_field :order_item_id, value: item.id %>
              <%= f.submit 'Remove' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>

  <%= link_to 'Proceed to Checkout', new_order_path, class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
