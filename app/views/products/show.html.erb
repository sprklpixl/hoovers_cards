<% if @product %>
  <h1><%= @product.title %></h1>
  <p><%= @product.content %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>

  <% if @product.sale_price.present? %>
    <p>Sale Price: <%= number_to_currency(@product.sale_price) %></p>
  <% end %>

  <% if @product.image.attached? %>
    <%= image_tag @product.image %>
  <% end %>

  <%= form_with url: order_path, method: :post do |f| %>
    <div>
      <%= label_tag :type, 'Please select one:' %>
      <%= select_tag :type, options_from_collection_for_select(@product.types, :id, :name) %>
    </div>

    <div>
      <%= f.submit 'Add to Cart' %>
    </div><br><br>
    <%= link_to 'Back to Shop', products_path %>
<% else %>
  <p>Product not found.</p>
  <%= link_to 'Back to Search', products_path %>
<% end %>

