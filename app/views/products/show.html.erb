<% if @product %>
    <h2><%= @product.title %></h2>
    <p><%= @product.image %></p>
    <p><strong>Set:</strong> <%= @product.category.name if @product.category %></p>
    <p><strong>Type:</strong> <%= @product.type %></p>
    <p><strong>Price:</strong> <%= @product.price %></p>
    <p><strong>Sale Price:</strong> <%= @product.sale_price %></p>
    <p><strong>Inventory:</strong> <%= @product.inventory %></p>

    <%= link_to 'Back to Shop', products_path %>
<% else %>
  <p>Product not found.</p>
  <%= link_to 'Back to Search', products_path %>
<% end %>

